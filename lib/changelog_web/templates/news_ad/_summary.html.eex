<article class="news_item news_item--sponsor js-track-news" data-news-type="sponsored" data-news-id="<%= NewsAd.hashid(@ad) %>">
  <%= render("_header.html", assigns) %>
  <%= render("_toolbar.html", assigns) %>
  <div class="news_item-content richtext">
    <%= @ad.story |> SharedHelpers.md_to_html() |> raw() %>
  </div>
  <%= image_link(@ad) %>
</article>
