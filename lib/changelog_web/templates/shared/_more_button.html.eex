<%= if @page.total_pages > 1 do %>
  <%= if @page.total_pages != @page.number do %>
    <nav class="load_more" role="menubar" aria-label="Pagination">
      <%= link("Next Page", to: pagination_path(+1, assigns) <> "#feed", rel: "next", title: "Next Page", class: "load_more-button") %>
    </nav>
  <% else %>
    <div class="load_more" aria-label="Pagination"> No more content! </div>
  <% end %>
<% end %>
