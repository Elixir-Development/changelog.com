<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url><loc><%= Routes.root_url(@conn, :index) %></loc><changefreq>always</changefreq></url>
  <url><loc><%= Routes.page_url(@conn, :about) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :coc) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :contact) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :films) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :community) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :sponsor) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :sponsor_pricing) %></loc></url>
  <url><loc><%= Routes.page_url(@conn, :nightly) %></loc></url>
  <url><loc><%= Routes.person_url(@conn, :join) %></loc></url>
  <url><loc><%= Routes.person_url(@conn, :subscribe) %></loc></url>
  <url><loc><%= Routes.live_url(@conn, :index) %></loc></url>

<%= for item <- @news_items do %>
  <url><loc><%= Routes.news_item_url(@conn, :show, NewsItem.slug(item)) %></loc></url>
<% end %>

  <url><loc><%= Routes.news_source_url(@conn, :index) %></loc></url>
<%= for source <- @news_sources do %>
  <url><loc><%= Routes.news_source_url(@conn, :show, source.slug) %></loc></url>
<% end %>

<%= for person <- @people do %>
  <url><loc><%= Routes.person_url(@conn, :show, person.handle) %></loc></url>
  <url><loc><%= Routes.person_url(@conn, :news, person.handle) %></loc></url>
  <url><loc><%= Routes.person_url(@conn, :podcasts, person.handle) %></loc></url>
<% end %>

  <url><loc><%= Routes.podcast_url(@conn, :index) %></loc></url>
<%= for podcast <- @podcasts do %>
  <url><loc><%= Routes.podcast_url(@conn, :show, podcast.slug) %></loc></url>
  <url><loc><%= Routes.podcast_url(@conn, :popular, podcast.slug) %></loc></url>
  <url><loc><%= Routes.podcast_url(@conn, :recommended, podcast.slug) %></loc></url>
<% end %>

  <url><loc><%= Routes.episode_request_url(@conn, :new) %></loc></url>
<%= for podcast <- @podcasts do %>
  <url><loc><%= Routes.episode_request_url(@conn, :new, podcast.slug) %></loc></url>
<% end %>

  <%= for episode <- @episodes do %>
    <url><loc><%= Routes.episode_url(@conn, :show, episode.podcast.slug, episode.slug) %></loc></url>
  <% end %>

  <url><loc><%= Routes.post_url(@conn, :index) %></loc></url>
  <%= for post <- @posts do %>
    <url><loc><%= Routes.post_url(@conn, :show, post.slug) %></loc></url>
  <% end %>

  <url><loc><%= Routes.topic_url(@conn, :index) %></loc></url>
  <%= for topic <- @topics do %>
    <url><loc><%= Routes.topic_url(@conn, :show, topic.slug) %></loc></url>
    <url><loc><%= Routes.topic_url(@conn, :news, topic.slug) %></loc></url>
    <url><loc><%= Routes.topic_url(@conn, :podcasts, topic.slug) %></loc></url>
  <% end %>
</urlset>
